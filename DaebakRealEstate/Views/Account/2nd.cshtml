@model DaebakRealEstate.Models.SecondPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Main Container -->
<div class="d-flex vh-100">

    <!-- Sidebar -->
    <div class="sidebar bg-light border-end p-3 d-flex flex-column justify-content-between" style="width: 250px;">
        <!-- Logo -->
        <div class="text-center mb-4">
            <img src="~/images/HOUSE3.png" alt="Logo" class="logo-img">
        </div>

        <!-- Navigation Links -->
        <nav class="d-flex flex-column">
            <a asp-controller="Home" asp-action="Index" class="nav-item">HOME</a>
            <a asp-controller="Management" asp-action="Management" class="nav-item">MANAGEMENT</a>
            <a asp-controller="Notifications" asp-action="Index" class="nav-item">NOTIFICATIONS</a>
            <a asp-controller="Settings" asp-action="Index" class="nav-item">SETTINGS</a>
        </nav>

        <!-- Logout Button -->
        <a asp-controller="Account" asp-action="Logout" class="nav-item logout">LOGOUT</a>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 p-4">
        <div class="container">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card p-4 bg-light text-center card-hover">USERS</div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 bg-light text-center card-hover">COMMUNITY</div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 bg-light text-center card-hover">SERVICES</div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 bg-light text-center">BILL & PAYMENTS</div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 bg-light text-center">SECURITY</div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 bg-light text-center">DOCUMENT</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    body {
        background-color: white;
    }

    .logo-img {
        width: 80px;
        height: auto;
    }

    /* Sidebar Navigation */
    .sidebar {
        transition: 0.3s ease-in-out;
    }

    .nav-item {
        display: block;
        text-decoration: none;
        color: #333;
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
        transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .nav-item:hover {
            background-color: #007bff;
            color: white;
        }

    .logout {
        margin-top: auto;
    }

    /* Card Styling */
    .card {
        cursor: pointer;
        font-weight: bold;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            background-color: #007bff;
        }

    /* Hover effect for Users, Community, and Services */
    .card-hover {
        transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .card-hover:hover {
            background-color: #007bff;
            color: white;
        }
</style>
