@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="left-side">
        <h1 class="lower-text"><span class="bold-text">DAEBAK</span> <span class="divider">|</span> <span class="subtext">YOUR DREAM <br> HOME AWAITS</span></h1>
    </div>
    <div class="right-side">
        <h2 class="welcome-back">WELCOME BACK</h2>
        <img src="~/images/HOUSE.png" alt="Login your account" class="house-icon" />

        <form asp-action="Login" asp-controller="Account" method="post">
            <label>Username</label>
            <input type="text" name="Username" required />
            <label>Password</label>
            <input type="password" name="Password" required />

            @if (!ViewData.ModelState.IsValid)
            {
                <p class="error-message">Invalid login attempt.</p>
            }

            <div class="button-container">
                <button type="submit">LOGIN</button>
                <a href="#">FORGOT PASSWORD</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: white;
    }

    .login-container {
        display: flex;
        width: 100%;
        height: 100vh;
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .left-side {
        flex: 0.6;
        background: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;
        font-size: 28px;
        font-weight: bold;
        color: black;
        padding: 50px;
        text-align: center;
        padding-bottom: 100px;
    }

    .bold-text {
        font-size: 60px;
        font-weight: bold;
    }

    .divider {
        font-size: 30px;
        font-weight: normal;
        padding: 0 10px;
    }

    .subtext {
        font-size: 30px;
        font-weight: normal;
    }

    .lower-text {
        margin-top: 30px;
    }

    .right-side {
        flex: 0.4;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #f9f9f9;
        padding: 40px;
    }

    .welcome-back {
        background: #d6d6d6;
        padding: 10px 40px;
        border-radius: 10px;
        font-size: 22px;
        font-weight: bold;
        display: inline-block;
    }

    .house-icon {
        width: 250px;
        height: auto;
        margin: 20px 0;
        opacity: 0.95;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 80%;
        align-items: center;
    }

    label {
        font-weight: bold;
        font-size: 14px;
        align-self: flex-start;
    }

    input {
        padding: 12px;
        border: none;
        border-radius: 20px;
        width: 100%;
        background: #eaeaea;
    }

    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    button {
        padding: 10px;
        background: #d6d6d6;
        color: black;
        border: 2px solid black;
        cursor: pointer;
        border-radius: 20px;
        font-size: 14px;
        width: 150%;
        box-shadow: 4px 4px 6px rgba(0, 0, 0, 0.5);
        margin-bottom: 5px;
    }

        button:hover {
            background: #bdbdbd;
        }

    .error-message {
        color: red;
        font-size: 14px;
        font-weight: bold;
    }

    a {
        text-align: center;
        font-size: 12px;
        color: black;
        text-decoration: none;
        margin-top: 10px;
    }
</style>
