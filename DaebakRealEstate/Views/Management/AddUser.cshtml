@model DaebakRealEstate.Models.UserViewModel
@{
    ViewData["Title"] = "Add New User";
}

<div class="container mt-4">
    <h2>Add New User</h2>

    <form asp-action="AddUser" method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" asp-for="Email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Role</label>
            <select asp-for="Role" class="form-control">
                <option>User</option>
                <option>Admin</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Add User</button>
        <a asp-action="Management" class="btn btn-secondary">Cancel</a>
    </form>
</div>
