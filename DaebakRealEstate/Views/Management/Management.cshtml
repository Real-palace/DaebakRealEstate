@model List<DaebakRealEstate.Models.UserViewModel>
@{
    ViewData["Title"] = "User Management";
}

<!-- Navigation -->
<li class="nav-item">
    <a class="nav-link" asp-controller="Management" asp-action="Management">MANAGEMENT</a>
</li>

<div class="container mt-4">
    <h2 class="mb-4">User Management</h2>

    <!-- Search & Filter Bar -->
    <form method="get" class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" placeholder="Search Users..." 
                       value="@Context.Request.Query["search"]" />
            </div>
            <div class="col-md-3">
                <select name="role" class="form-select">
                    <option value="" selected="@(string.IsNullOrEmpty(Context.Request.Query["role"]))">All Roles</option>
                    <option value="Admin" selected="@(Context.Request.Query["role"] == "Admin")">Admin</option>
                    <option value="User" selected="@(Context.Request.Query["role"] == "User")">User</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <!-- Add User Button -->
    <a asp-action="AddUser" class="btn btn-success mb-3">+ Add New User</a>

    <!-- User Table -->
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Custom Styling -->
<style>
    .table {
        border-radius: 5px;
        overflow: hidden;
    }

    .btn {
        font-size: 14px;
    }

    .form-select, .form-control {
        border-radius: 5px;
    }
</style>
